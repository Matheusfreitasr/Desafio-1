function encontrarMenorNumero(lista) {
    let menor = lista[0];
    for (let i = 1; i < lista.length; i++) {
        if (lista[i] < menor) {
            menor = lista[i];
        }
    }
    return menor;
}

function encontrarMaiorNumero(lista) {
    let maior = lista[0];
    for (let i = 1; i < lista.length; i++) {
        if (lista[i] > maior) {
            maior = lista[i];
        }
    }
    return maior;
}

const numeros = [15, 8, 90, 75, 102, 6, 2];

const menorNumero = encontrarMenorNumero(numeros);
const maiorNumero = encontrarMaiorNumero(numeros);

console.log("O menor número é:", menorNumero);
console.log("O maior número é:", maiorNumero);

